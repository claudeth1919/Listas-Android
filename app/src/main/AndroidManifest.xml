<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="mx.anahuac.app">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:configChanges="orientation"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Comida"
            android:label="@string/title_activity_comida"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Bares"
            android:label="@string/title_activity_bares"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Entretenimiento"
            android:label="@string/title_activity_entretenimiento"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Hospedaje"
            android:label="@string/title_activity_hospedaje"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Tiendas"
            android:label="@string/title_activity_tiendas"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Servicios"
            android:label="@string/title_activity_servicios"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>